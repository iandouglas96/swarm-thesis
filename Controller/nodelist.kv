#entry on the robot list
<NodeRowEntry>:
  canvas.before:
    Color:
      rgba: (0.2, 0.2, 0.2, 1) if root.selected else (0.8, 0.8, 0.8, 1)
    Rectangle:
      size: self.size
      pos: self.pos
  value: ''
  Label:
    text: root.value
    color: (0.8, 0.8, 0.8, 1) if root.selected else (0.2, 0.2, 0.2, 1)

#list of robots
<NodeList>:
  rv: node_list_view
  orientation: 'vertical'
  node_list: []
  Button:
    size_hint_y: None
    text: 'Scan'
    height: '56dp'
    on_release: root.scan()
  RecycleView:
    id: node_list_view
    scroll_type: ['bars', 'content']
    bar_width: dp(10)
    viewclass: 'NodeRowEntry'
    data: root.node_list
    SelectableRecycleBoxLayout:
      default_size: None, dp(56)
      default_size_hint: 1, None
      size_hint_y: None
      height: self.minimum_height
      orientation: 'vertical'
      spacing: dp(2)
