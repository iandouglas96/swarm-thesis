#:kivy 1.10.0

#Helper class with a box to enter stuff and a label to label it
<DataEntry@BoxLayout>:
  orientation: 'horizontal'
  height: '40dp'
  size_hint_y: None
  label: ''
  input_type: None
  text_box: text_input
  Label:
    size_hint_x: None
    width: '100dp'
    #Set the label to the configured text
    text: root.label
  TextInput:
    id: text_input
    input_filter: root.input_type
    multiline: False

<EditDataPanel>:
  orientation: 'vertical'
  DataEntry:
    id: node_id
    input_type: 'int'
    label: 'Node ID:'
  DataEntry:
    id: target_separation
    input_type: 'int'
    label: 'Separation:'
  DataEntry:
    id: attraction_const
    input_type: 'float'
    label: 'Attraction:'
  DataEntry:
    id: repulsion_const
    input_type: 'float'
    label: 'Repulsion:'
  DataEntry:
    id: sensor_calib_1
    input_type: None
    label: 'Sen Calib1:'
  DataEntry:
    id: sensor_calib_2
    input_type: None
    label: 'Sen Calib2:'
  DataEntry:
    id: angular_v_const
    input_type: 'int'
    label: 'Angular V:'
  DataEntry:
    id: linear_v_const
    input_type: 'int'
    label: 'Linear V:'
  DataEntry:
    id: freq
    input_type: 'int'
    label: 'Frequency:'
  BoxLayout:
    orientation: 'horizontal'
    height: '40dp'
    size_hint_y: None
    Label:
      size_hint_x: None
      width: '100dp'
      #Set the label to the configured text
      text: 'Verbose:'
    CheckBox:
      id: verbose
  Button:
    height: '40dp'
    size_hint_y: None
    text: 'Apply'
    on_release: root.apply_changes()
  ToggleButton:
    id: manual_control
    height: '40dp'
    size_hint_y: None
    text: 'Manual Control'
    #pass the new state to the controller when it changes
    on_release: root.toggle_control_mode(self.state)
  #empty widget to take up space
  Widget:
