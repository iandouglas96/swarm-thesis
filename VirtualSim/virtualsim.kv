#:kivy 1.10.0
#:include node.kv

<VirtualSim>:
  NodeField:
    id: node_field
    canvas.before:
      #draw background
      Color:
        rgba: (0.1, 0.1, 0.1, 1)
      Rectangle:
        size: self.size
        pos: self.pos
  Label:
    id: serial_label
    text: "no port open"
    width: 300
    size_hint_y: None
    size_hint_x: None
    pos_hint: {'x':0, 'y':0}
